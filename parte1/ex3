programa {
  funcao real divisaoConta(real vConta, inteiro nPessoas) {
    retorne vConta / nPessoas
  }


  funcao inicio() {
    /*Restaurante (Divisão da Conta): Um restaurante precisa dividir a conta entre os clientes.
Solicite o valor total da conta e o número de pessoas na mesa. Exiba o valor que cada
pessoa deve pagar.*/

    real valorConta
    inteiro numPessoas

    escreva("========================\n")
    escreva("BEM VINDO AO RESTAURANTE\n")
    escreva("========================\n")

    escreva("Digite o valor total da conta (R$): ")
    leia(valorConta)

    escreva("Digite o número de pessoas na mesa: ")
    leia(numPessoas)

    real result = divisaoConta(valorConta, numPessoas)
    escreva("O valor que cada pessoa deve pagar é de (R$): ", result)
  }
}
